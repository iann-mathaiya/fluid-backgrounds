---
import RootLayout from "../layouts/RootLayout.astro";
import colorPalettes from "../lib/color-palettes/100.json";
---

<RootLayout
    title="Mesh Gradients"
    description="Mesh gradients from Nice Color Palettes"
>
    <section class="mx-auto p-4 w-full max-w-screen-lg">
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {
                colorPalettes.map((palette) => (
                    <li class="rounded-xl overflow-hidden">
                        <ul class="flex">
                            {palette.map((color) => (
                                <li class="w-1/4 h-64 text-zinc-600" style={{ backgroundColor: color }}>{color}</li>
                            ))}
                        </ul>
                    </li>
                ))
            }
        </ul>
    </section>
</RootLayout>
