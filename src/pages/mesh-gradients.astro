---
import RootLayout from "../layouts/RootLayout.astro";
import { getColorPalettesByRange } from "../lib/utils";
import FluidMeshLogo from "../components/fluid-logos/mesh";
import colorPalettes from "../lib/color-palettes/100.json";
import MeshBackground from "../components/backgrounds/mesh-background";
import StarOnGitHub from "../components/star-on-github.astro";
---

<RootLayout
    title="Mesh Gradients"
    description="Mesh gradients from Nice Color Palettes"
>
    <main class="mx-auto p-4 w-full max-w-screen-xl min-h-screen">
        <header class="mt-0 sm:mt-12 flex items-center gap-4">
            <a href="/">
                <FluidMeshLogo client:load />
            </a>

            <div class="sm:w-full flex flex-col sm:flex-row sm:justify-between gap-2">
                <div class="w-full">
                    <h1 class="text-lg font-semibold">Mesh Gradient Shaders</h1>
                    <p class="text-sm text-zinc-600 text-balance">
                        <span class="sm:hidden block">
                            Built with paper shaders
                        </span>
                        <span class="hidden sm:block">
                            Subtle and fluid backgrounds built with paper
                            shaders.
                        </span>
                    </p>
                </div>

                <StarOnGitHub />

                <!-- <a
                    href="/mesh-gradients"
                    class="py-2 px-4 size-fit text-xs sm:text-sm text-white whitespace-nowrap border border-zinc-500 hover:border-sky-400 bg-linear-to-b from-zinc-700 to-zinc-950 hover:from-sky-500 hover:via-40% hover:via-sky-600 hover:to-sky-700 inset-shadow-xs inset-shadow-zinc-200/60 rounded-full"
                >
                    View Collection
                </a> -->
            </div>
        </header>
        
        <!-- <TabLayout client:load /> -->

        <ul class="mt-8 sm:mt-12 grid grid-cols-1 sm:grid-cols-2 gap-4">
            {
                getColorPalettesByRange(colorPalettes, 0, 11).map((palette) => (
                    <li class="group relative aspect-video rounded-xl overflow-hidden">
                        <div class="hidden group-hover:flex absolute top-1.5 right-1.5 gap-2">
                            <button type="button" class="px-2 py-1 text-sm text-zinc-900 bg-zinc-200/30 hover:bg-zinc-200/40 backdrop-blur-2xl hover:cursor-pointer rounded-full">
                                Copy Code
                            </button>
                            {/* Support open in Paper when we collab or they support plugins */}
                            {/* <p class="text-sm text-zinc-900">Open in Paper</p> */}
                        </div>
                        <MeshBackground color1={palette[0]} color2={palette[1]} color3={palette[2]} color4={palette[2]} client:load />
                    </li>
                ))
            }
        </ul>
    </main>
</RootLayout>
