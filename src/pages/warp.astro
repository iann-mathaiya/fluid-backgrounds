---
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import StarOnGitHub from "../components/star-on-github.astro";
import FluidWarpLogo from "../components/fluid-logos/warp";
---

<RootLayout
    title="Warp Shaders"
    description="TODO: Add description"
>
    <main class="mx-auto p-4 w-full max-w-screen-xl min-h-screen">
        <header class="mt-0 sm:mt-12 flex items-center gap-4">
            <a href="/">
                <FluidWarpLogo client:load />
            </a>

            <div class="sm:w-full flex flex-col sm:flex-row sm:justify-between gap-2">
                <div class="w-full">
                    <h1 class="text-lg font-semibold">Warp Shaders</h1>
                    <p class="text-sm text-zinc-600 text-balance">
                        <span class="sm:hidden block">
                            Built with paper shaders
                        </span>
                        <span class="hidden sm:block">
                            Subtle and fluid backgrounds built with paper shaders.
                        </span>
                    </p>
                </div>

                <StarOnGitHub />

                <!-- <a
                    href="/mesh-gradients"
                    class="py-2 px-4 size-fit text-xs sm:text-sm text-white whitespace-nowrap border border-zinc-500 hover:border-sky-400 bg-linear-to-b from-zinc-700 to-zinc-950 hover:from-sky-500 hover:via-40% hover:via-sky-600 hover:to-sky-700 inset-shadow-xs inset-shadow-zinc-200/60 rounded-full"
                >
                    View Collection
                </a> -->
            </div>
        </header>
        
        <!-- <TabLayout client:load /> -->

        <section class="mt-8 sm:mt-12 grid gap-4">    
            <div class="w-full aspect-video rounded-xl overflow-hidden">
                <WarpBackground 
                color1="#FFE74C" 
                color2="#FF5964" 
                color3="#35A7FF" 
                distortion={0.1} 
                scale={0.2}
                speed={0.4}
                rotation={0.5}
                client:load 
                />
            </div>
        </section>
    </main>
</RootLayout>
