---
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/backgrounds/warp-background";
---

<RootLayout title="Warp Shaders" description="TODO: Add description">
    <main class="mx-auto p-4 w-full max-w-screen-xl min-h-screen flex items-center justify-center">
        <div class="w-full max-w-96 h-56 rounded-2xl shadow-2xl overflow-hidden">
            <WarpBackground
                color1="#bae6fd"
                color2="#60a5fa"
                color3="#312e81"
                speed={0.6}
                rotation={0.1}
                distortion={0.2}
                scale={0.5}
                swirl={1}
                style={{ width: '100%', height: '100%' }}
                client:load
            />
        </div>
    </main>
</RootLayout>
