---
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/backgrounds/warp-background";
---

<RootLayout title="Playground for Socials" description="TODO: Add description">
    <main class="mx-auto p-4 w-full max-w-screen-xl min-h-screen flex items-center justify-center">
        <div class="w-full relative max-w-64 h-14 flex items-center justify-center rounded-full shadow-2xl overflow-hidden">
            <div class="absolute w-full h-full -z-10 rounded-full">
                <WarpBackground
                    color1="#bae6fd"
                    color2="#60a5fa"
                    color3="#3b82f6"
                    speed={0.5}
                    rotation={0.1}
                    distortion={0.2}
                    scale={0.5}
                    swirl={1}
                    style={{ width: "100%", height: "100%" }}
                    client:load
                />
            </div>

            <p class="absolute z-10 text-lg text-zinc-900 font-medium">Watch the demo</p>
        </div>
    </main>
</RootLayout>
