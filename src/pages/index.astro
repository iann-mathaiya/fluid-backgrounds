---
import FluidBackground from "../components/fluid-background";
import RootLayout from "../layouts/RootLayout.astro";

const TABS = ["Hero Sections", "Bento Cards", "Onboarding", "Portfolios", "UI Components"]
---

<RootLayout>
	<section class="mx-auto p-4 w-full max-w-screen-lg">
		<div class="mt-0 sm:mt-12 flex items-center gap-4">
			<FluidBackground client:load />
			<div
				class="sm:w-full flex flex-col sm:flex-row sm:justify-between gap-2"
			>
				<div class="w-full">
					<h1 class="text-lg font-semibold">Fluid Backgrounds</h1>
					<p class="text-sm text-zinc-600 text-balance">
						<span class="sm:hidden block">
							Built with paper shaders
						</span>
						<span class="hidden sm:block">
							Subtle and fluid backgrounds built with paper
							shaders.
						</span>
					</p>
				</div>

				<a
					href="/playground"
					class="py-2 px-4 size-fit text-xs sm:text-sm text-white whitespace-nowrap border border-zinc-500 hover:border-sky-400 bg-gradient-to-b from-zinc-700 to-zinc-950 hover:from-sky-500 hover:via-40% hover:via-sky-600 hover:to-sky-700 inset-shadow-xs inset-shadow-zinc-200/60 rounded-full"
				>
					View Collection
				</a>
			</div>
		</div>

		<ul class="mt-8 sm:mt-12 flex items-center gap-2">
			{TABS.map(tab => 
				<li>
					<button class="py-1.5 px-4 size-fit text-sm text-zinc-600 hover:text-zinc-900 bg-zinc-200 rounded-full">
						{tab}
					</button>
				</li>
			)}
		</ul>
	</section>
</RootLayout>
