---
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/backgrounds/warp-background";
import DotOrbitBackground from "../components/backgrounds/dot-orbit-background";
import NeuroNoiseBackground from "../components/backgrounds/neuro-noise-background";
---

<RootLayout title="Playground for Socials" description="TODO: Add description">
    <main class="mx-auto p-4 w-full max-w-screen-xl min-h-screen flex flex-col items-center justify-center gap-12">
        <button class="w-full relative max-w-64 h-14 flex items-center justify-center rounded-full shadow-2xl overflow-hidden">
            <div class="absolute w-full h-full -z-10 rounded-full">
                <WarpBackground
                    color1="#bae6fd"
                    color2="#60a5fa"
                    color3="#3b82f6"
                    speed={0.5}
                    rotation={0.1}
                    distortion={0.2}
                    scale={0.5}
                    swirl={1}
                    style={{ width: "100%", height: "100%" }}
                    client:load
                />
            </div>

            <div class="w-full h-full absolute z-10 bg-zinc-900/5"/>


            <p class="absolute z-10 text-lg text-zinc-900 font-medium">Watch the demo</p>
        </button>  

        <button class="w-full relative max-w-64 h-14 flex items-center justify-center border border-zinc-200 rounded-full shadow-2xl overflow-hidden">
            <div class="absolute w-full h-full -z-10 rounded-full">
                <NeuroNoiseBackground colorFront="#000" colorBack="#fff" speed={0.4} client:load />
            </div>

            <div class="w-full h-full absolute z-10 bg-zinc-900/20"/>

            <p class="absolute z-20 text-lg text-zinc-900 font-medium">Curate your feed</p>
        </button>

        <button class="w-full relative max-w-64 h-14 flex items-center justify-center border border-zinc-100 rounded-full shadow-2xl overflow-hidden">
            <div class="absolute w-full h-full -z-10 rounded-full">
                <DotOrbitBackground color1="#65a30d" color2="#db2777" color3="fafafa" color4="#0284c7" spreading={10} client:load />
            </div>

            <div class="w-full h-full absolute z-10 bg-zinc-900/6"/>

            <p class="absolute z-20 text-lg text-zinc-900 font-medium">Get in the arena</p>
        </button>
    </main>
</RootLayout>
